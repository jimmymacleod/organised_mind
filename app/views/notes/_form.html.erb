<%= form_for @note do |f| %>

    <fieldset>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </fieldset>

    <fieldset>
      <%= f.label :detail %>
      <%= f.text_field :detail %>
    </fieldset>

    <fieldset>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </fieldset>

    <fieldset>
      <% options = options_from_collection_for_select(@days, 'id' , 'date') %>
      <%= f.label :day_id %>
      <%= f.select :day_id,  options, :include_blank => true %>
    </fieldset>

    <%= f.submit %>

<% end %>
