

<div class="container">

    <h1>Days_Index</h1>


  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="margin-top: 20px">
  <div class="carousel-inner">


     <div class="carousel-item active">
       <div class="d-block w-100" style="height: 400px;">
          <button type="button" class="btn btn-secondary-outline big-button" style="height: 100%; width: 20%;"><a href="/days/today">Today</a></button>
       </div>
     </div>






    <% if @days.present? %>
     <% @days.each do |day| %>

     <div class="carousel-item">
       <div class="d-block w-100" style="height: 400px">

         <p><a href="/days/<%= day.id %>">LINK</a><br>
            ID: <%= day.id %> <br>
            Date: <%= day.date %> <br>
            Jounral: <%= day.journal %> <br>
            Image: <%= day.image %></p>

       </div>
     </div>

     <% end %>
   <% end %>



