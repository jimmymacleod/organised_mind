

<div class="row">

 <div class="row">
   <div class="col-lg-8">

     <!-- Title -->
     <div style="position: absolute;z-index:1;">
       <h1 class="mt-4">Days_Today: <%= @day.id %></h1>
        <hr>
        <div style="background-color: white; padding: 10px; opacity: 0.5; text-color: white;">
             <a href="/home">Home</a> |
             <a href="/days">Days Index</a> |
             <a href="/days/<%= @day.id %>/edit">Edit Day</a> |
             <%= link_to "Delete Day", day_path(@day), method: :delete, data: { confirm: "Are you sure?"} %>
        </div>

       <hr>

     </div>

     <!-- Preview Image -->
     <div style="height: 25px;"></div>

      <% if @day.image.present? %>

           <img class="img-fluid rounded" src="<%= @day.image %>" alt="" style="opacity: 0.5;">

      <% else %>

          <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="" style="opacity: 0.5;">

      <% end %>

     <hr>

     <!-- Post Content -->
     <p class="lead"><%= @day.journal %><br>

      <a href="/days/<%= @day.id %>/edit">Edit Day</a>

      <hr>
     </p>
   </div>

   <div class="col-md-4">

     <!-- Search Widget -->
     <!-- <div style="height:140px;">

     </div> -->

     <!-- Categories Widget -->
     <div class="card my-4">
       <h5 class="card-header">Notes</h5>
        <a href="/notes/new" class="btn btn-primary">New Note</a>
       <div class="card-body">
         <div class="row">
           <div class="col-lg-6">
             <ul class="list-unstyled mb-0">
               <% @day.notes.each do |n| %>
               <li>
                 <a href="#"><%= n.title %></a>
               </li>
               <% end %>
             </ul>
           </div>
         </div>
       </div>
     </div>
     <div class="card my-4">
       <h5 class="card-header">Tasks</h5>
       <a href="/tasks/new" class="btn btn-success">New Task</a>
       <div class="card-body">
         <div class="row">
           <div class="col-lg-6">
             <ul class="list-unstyled mb-0">
               <% @day.tasks.each do |t| %>
               <li>
                 <a href="#"><%= t.name %></a>
               </li>
               <% end %>
             </ul>
           </div>
         </div>
       </div>
     </div>
    </div>
